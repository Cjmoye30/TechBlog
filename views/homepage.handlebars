<!-- Modal to handle comments -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Comment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">

        <form class="form add-comment-form">
          <div class="currentPost">
            <h5 class="currentTitle"></h5>
            <p class="currentDesc"></p>
          </div>

          <div class="form-group">
            <label for="blog-desc-update">Comment:</label>
            <textarea class="form-input add-comment" id="add-comment"></textarea>
          </div>
        </form>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary addCommentButton">Add Comment</button>
      </div>
    </div>
  </div>
</div>

<div>
  <h2>Blogs from our users! </h2>

  {{#each blogArr}}
  <div class="blogpost">
    <div class="blog-header">
      <h3 class="blogTitle">{{title}}</h3>
      <div class="nameAndDate">
        <p>Author: {{user.name}}</p>
        <p>Date: {{format_date date_created}}</p>
      </div>
    </div>

    <div class="blogDescription">
      <p>{{description}}</p>
    </div>


    <h6>Comments:</h6>



    <p>
      <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapse{{id}}" role="button" aria-expanded="false"
        aria-controls="collapse{{id}}">
        Add a Comment!
      </a>
    </p>

    <div class="collapse" id="collapse{{id}}">
      <div class="card card-body">
        {{#each comments}}
        <div class="commentsWrapper">
          <p class="commentDesc">{{this.description}}</p>
          <p class="commentName">By: {{this.user.name}}, {{format_date this.date_created}} </p>
        </div>
        {{/each}}
      </div>
    </div>





    {{!-- add a comment --}}
    {{!-- should eventually show/hide on click --}}
    <div class="comments">
      <ul class="commentsSection"></ul>
    </div>
    {{!-- id = session.id of the user who is logged in --}}
    <i id="{{id}}" class='far fa-comment comment-button' type="button" data-bs-toggle="modal"
      data-bs-target="#exampleModal" style='font-size:24px'></i>

  </div>
  {{/each}}

</div>
{{#if session.logged_in}}
<div>
  <h5>Add more posts from your Dashboard</h5>
  <button class="btn btn-secondary">
    <a href="/dashboard">Dashboard</a>
  </button>
</div>

{{else}}
<div class="call-to-action">
  <h2>Want to contribute? Sign up or login below!</h2>
  <div class="login-buttons">
    <button class="btn btn-secondary">Login</button>
    <button class="btn btn-secondary">Signup</button>
  </div>
</div>
{{/if}}

