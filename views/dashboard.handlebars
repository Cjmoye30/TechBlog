<h1>Dashboard Page</h1>

{{!-- Section to show the user their posts --}}
<div>
  {{!-- Showing the user each of their blogposts after they are logged in --}}
  <div>
    <h1>Hello, {{session.name}}!</h1>
    <h3>Your Blogposts:</h3>

    {{#each userArray}}

    <h1> {{title}} </h1>
    <p> {{description}} </p>

    {{/each}}

  </div>
</div>

{{!-- Section for the user to add a new blogpost --}}
<h5>Add a new post below:</h5>
<div class="newPost">

  <form class="form new-blog-form">
    <div class="form-group">
      <label for="blog-title">Blog Title:</label>
      <input class="form-input" type="text" id="blog-title"/>
    </div>

    <div class="form-group">
      <label for="blog-desc">description:</label>
      <textarea class="form-input" id="blog-desc"></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary newBlogButton">Create</button>
    </div>
  </form>
</div>

  <script type="text/javascript" src="/js/userDashboard.js"></script>

