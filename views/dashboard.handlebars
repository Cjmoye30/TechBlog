<!-- Modal to handle blogpost updates -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Blogpost</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">

        {{!-- populate the modal with the id, title, and description from the button click --}}
        <form class="form update-blog-form">
          <div class="form-group">
            <label for="blog-title-update">New Title:</label>
            <input class="form-input update-title" type="text" id="blog-title-update"/>
          </div>

          <div class="form-group">
            <label for="blog-desc-update">New Description:</label>
            <textarea class="form-input update-desc" id="blog-desc-update"></textarea>
          </div>
        </form>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary updateBlogButton">Save changes</button>
      </div>
    </div>
  </div>
</div>

{{!-- Section to show the user their posts --}}
<div>
  {{!-- Showing the user each of their blogposts after they are logged in --}}
  <h1>Hello, {{session.name}}!</h1>
  <h3>Your Blogposts:</h3>
  <div class="all-blogs-container">

    {{#each userArray}}

    {{!-- store the blog id so that on a click event we can know which blog to edit --}}
    {{!-- on edit click, give the selected blog contenteditable="true" --}}
    <div class="blog-entry">
      <div class="getthis">
        <h1 class="blog-title"> {{title}} </h1>
        <p class="blog-description"> {{description}} </p>
      </div>
      {{!-- edit button for button id --}}
      <i id="{{id}}" type="button" class='fas fa-edit edit-button' data-bs-toggle="modal" data-bs-target="#exampleModal" style='font-size:24px'></i>

      {{!-- delete button for button id --}}
      <i id="{{id}}" class='fas fa-trash delete-button' style='font-size:24px'></i>
    </div>

    {{/each}}

  </div>
</div>

